<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer"/>
    <Bitmap profile="dialogFullscreenBg" id="dialogBg"/>
    <GuiElement profile="fs25_dialogBg" id="dialogElement" size="700px 600px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle"/>
        <ThreePartBitmap profile="fs25_dialogBgTop"/>
        <ThreePartBitmap profile="fs25_dialogBgBottom"/>
        <GuiElement profile="fs25_dialogContentContainer">
            <Text profile="dialogTitle" text="$l10n_rm_asc_vehicle_dialog_title" id="dialogTitleElement" position="0px -30px"/>

            <!-- Empty state message (shown when list is empty) -->
            <Text profile="fs25_dialogText" text="$l10n_rm_asc_vehicle_noFillUnits" id="emptyListText" position="0px -200px" size="600px 40px"/>

            <!-- Fill unit list -->
            <SmoothList profile="rmAscFillTypeList" id="fillUnitList" position="50px -80px" size="570px 420px" focusInit="onOpen" focusChangeTop="nil" focusChangeBottom="nil" onClick="onListClick" onDoubleClick="onListDoubleClick">
                <ListItem profile="rmAscFillTypeListItem" name="fillUnitRowTemplate" size="555px 55px">
                    <Bitmap profile="rmAscFillTypeIcon" position="10px -8px" size="40px 40px" name="fillTypeIcon"/>
                    <Text profile="rmAscFillTypeName" position="60px -5px" size="300px 28px" name="fillTypeName"/>
                    <Text profile="rmAscFillTypeCapacity" position="60px -30px" size="300px 22px" name="capacityText"/>
                    <Text profile="rmAscFillLevel" position="370px 0px" size="170px 55px" name="fillLevelText"/>
                    <TextInput profile="rmAscCapacityInput" position="320px -7px" size="210px 40px" name="capacityInput" visible="false" maxCharacters="10" onEnterPressed="onCapacityInputEnter" onEscPressed="onCapacityInputEscape" onIsUnicodeAllowed="onCapacityIsUnicodeAllowed"/>
                </ListItem>
            </SmoothList>

            <!-- Scrollbar -->
            <ThreePartBitmap profile="fs25_listSliderBox" position="-30px -17px" size="12px 420px" with="anchorTopRight">
                <Slider profile="fs25_listSlider" size="6px 412px" dataElementId="fillUnitList" id="listSlider"/>
            </ThreePartBitmap>
        </GuiElement>

        <!-- Buttons -->
        <BoxLayout profile="fs25_dialogButtonBox" size="600px 60px">
            <Button profile="buttonExtra1" text="$l10n_rm_asc_dialog_resetAll" onClick="onClickResetAll"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator"/>
            <Button profile="buttonBack" text="$l10n_rm_asc_dialog_close" onClick="onClickClose"/>
        </BoxLayout>
    </GuiElement>
</GUI>
